<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/main_background"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView android:layout_width="125dp"
               android:layout_height="125dp"
               android:id="@+id/icon_present"
               android:src="@drawable/icon_like"
    />
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_margin="30dp">
        <!--Cot 1-->
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:paddingHorizontal="20dp"
                      android:gravity="center"
                      android:orientation="vertical">

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/ic_like"
                       android:src="@drawable/icon_like"

            />
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/ic_sad"
                       android:layout_marginTop="10dp"
                       android:src="@drawable/icon_sad"
            />

        </LinearLayout>

        <!--Cot 2-->
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:paddingHorizontal="20dp"
                      android:gravity="center"
                      android:orientation="vertical">

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/ic_love"
                       android:src="@drawable/icon_love"

            />
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/ic_wow"
                       android:layout_marginTop="10dp"
                       android:src="@drawable/icon_wow"
            />

        </LinearLayout>

        <!--Cot 3-->
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:layout_marginHorizontal="20dp"
                      android:gravity="center"
                      android:orientation="vertical">

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/ic_haha"
                       android:src="@drawable/icon_haha"

            />
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/ic_angry"
                       android:layout_marginTop="10dp"
                       android:src="@drawable/icon_angry"
            />

        </LinearLayout>

    </LinearLayout>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_save_background"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_shape"
            android:text="SAVE"
            android:textSize="20sp"
            android:textStyle="bold|italic"
    />

</LinearLayout>