<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center"
              android:background="@drawable/main_background"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="300dp"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="horizontal">

        <EditText android:layout_width="200dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/edit_title"
                  android:hint="Set Title"
                  android:textSize="25sp"
                  android:textStyle="italic"
        />
        <Button android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/btn_present"
                android:background="@drawable/btn_shape"
                android:backgroundTint="@color/colorBlue"

        />

    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="horizontal"
                  android:layout_margin="30dp">
        <!--Cot 1-->
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:paddingHorizontal="20dp"
                      android:layout_gravity="center"
                      android:orientation="vertical">

            <Button android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/btn_blue"
                    android:background="@drawable/btn_shape"
                    android:backgroundTint="@color/colorBlue"
            />
            <Button android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/btn_green"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_shape"
                    android:backgroundTint="@color/colorGreen"
            />

        </LinearLayout>

        <!--Cot 2-->
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:paddingHorizontal="20dp"
                      android:gravity="center"
                      android:orientation="vertical">

            <Button android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/btn_red"
                    android:background="@drawable/btn_shape"
                    android:backgroundTint="@color/colorRed"
            />
            <Button android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/btn_yellow"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_shape"
                    android:backgroundTint="@color/colorYellow"
            />
        </LinearLayout>


        <!--Cot 3-->
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:paddingHorizontal="20dp"
                      android:gravity="center"
                      android:orientation="vertical">

            <Button android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/btn_pink"
                    android:background="@drawable/btn_shape"
                    android:backgroundTint="@color/colorPink"
            />
            <Button android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/btn_black"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_shape"
                    android:backgroundTint="@color/colorBlack"
            />
        </LinearLayout>


    </LinearLayout>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_save_title"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_shape"
            android:text="SAVE"
            android:textSize="20sp"
            android:textStyle="bold|italic"
    />

</LinearLayout>