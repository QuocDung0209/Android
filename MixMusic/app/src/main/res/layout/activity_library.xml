<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C8E2B1"
        tools:context=".ActivityLibrary"
        android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/task"
            android:scrollbars="vertical" />

    <FrameLayout android:layout_width="match_parent"
                 android:layout_marginRight="10dp"
                 android:layout_marginLeft="10dp"
                 android:layout_alignParentBottom="true"
                 android:id="@+id/task"
                 android:layout_height="wrap_content">
        <ImageButton android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:src="@drawable/go_home"
                     android:layout_gravity="left"
                     android:layout_margin="10dp"
                     android:scaleType="fitXY"
                     android:background="@drawable/circle_bottom"
                     android:padding="10dp"
                     android:alpha="0.9"
                     android:id="@+id/btnHomel"
        />

        <ImageButton android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:src="@drawable/library"
                     android:scaleType="fitXY"
                     android:layout_gravity="center"
                     android:layout_margin="10dp"
                     android:background="@drawable/circle_bottom"
                     android:padding="10dp"
                     android:alpha="0.9"
                     android:id="@+id/btnLibraryl"
        />

        <ImageButton android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:src="@drawable/settings"
                     android:scaleType="fitXY"
                     android:background="@drawable/circle_bottom"
                     android:padding="10dp"
                     android:layout_gravity="right"
                     android:layout_margin="10dp"
                     android:alpha="0.9"
                     android:id="@+id/btnSettingl"
        />
    </FrameLayout>


</RelativeLayout>