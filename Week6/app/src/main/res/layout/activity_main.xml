<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Relative"
    >
        <EditText
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTitle_User"
                android:hint="Title"
        />
        <Button
                android:layout_alignBaseline="@+id/editTitle_User"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnAdd"
                android:text="ADD"
                android:layout_toRightOf="@+id/editTitle_User"
                android:layout_toEndOf="@+id/editTitle_User"
                android:backgroundTint="@color/colorPrimary"
        />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnUsersList"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/editTitle_User"
                android:text="Users List"
                android:backgroundTint="@color/colorPrimary"
        />
        <android.support.v7.widget.RecyclerView
                android:id="@+id/rvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:layout_marginHorizontal="15dp"
                android:layout_below="@+id/btnUsersList"/>

    </RelativeLayout>

</RelativeLayout>