<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Title" android:background="@android:color/background_light">

    <TextView
            android:text="Title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/textView3"
            android:textAlignment="center"
            android:textSize="25dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="#0000CD"
            android:textColor="#FFFFFF"
    />
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp">
        <EditText
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|text"
                android:ems="10"
                android:id="@+id/editText"
                android:text="Team_6"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/blue"
                android:id="@+id/imgColor"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"/>
    </RelativeLayout>

    <TableLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="10dp"
                 android:stretchColumns="*"
    >
        <TableRow>
            <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/blue"
                    android:id="@+id/imgBlue"
                    android:background="@null"
            />
            <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/lime"
                    android:id="@+id/imgLime"
                    android:background="@null"
            />
            <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/cyan"
                    android:id="@+id/imgCyan"
                    android:background="@null"
            />
        </TableRow>
        <TableRow>
            <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/magenta"
                    android:id="@+id/imgMagenta"
                    android:background="@null"
            />
            <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/purple"
                    android:id="@+id/imgPurple"
                    android:background="@null"
            />
            <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/red"
                    android:id="@+id/imgRed"
                    android:background="@null"
            />
        </TableRow>
    </TableLayout>
    <Button
            android:text="SAVE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSaveTitle"
            android:layout_marginTop="30dp"
    />

</LinearLayout>