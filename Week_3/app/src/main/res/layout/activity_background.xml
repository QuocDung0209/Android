<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Background" android:background="@android:color/background_light">


    <TextView
            android:text="Background"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/textView3"
            android:textAlignment="center"
            android:textSize="25dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:background="#0000CD"
            android:textColor="#FFFFFF"
    />
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/level_img"
            android:id="@+id/imageView2"
            android:layout_marginVertical="30dp"
    />

    <TableLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="10dp"
                 android:stretchColumns="*"
    >
        <TableRow>
            <ImageButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:srcCompat="@drawable/green"
                    android:id="@+id/imgGreen"
                    android:background="@null"
            />
            <ImageButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:srcCompat="@drawable/monero"
                    android:id="@+id/imgMonero"
                    android:background="@null"
            />
            <ImageButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:srcCompat="@drawable/r"
                    android:id="@+id/imgR"
                    android:background="@null"
            />
        </TableRow>
        <TableRow>
            <ImageButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:srcCompat="@drawable/five"
                    android:id="@+id/imgFive"
                    android:background="@null"
            />
            <ImageButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:srcCompat="@drawable/two"
                    android:id="@+id/imgTwo"
                    android:background="@null"
            />
            <ImageButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:srcCompat="@drawable/one"
                    android:id="@+id/imgOne"
                    android:background="@null"
            />
        </TableRow>
    </TableLayout>
    <Button
            android:text="SAVE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSaveBG"
            android:layout_marginTop="50dp"
    />

</LinearLayout>